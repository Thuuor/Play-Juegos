<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:stretchColumns="*"
    tools:context=".Newplayer">


    <ImageView
        android:id="@+id/imagePerson"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="48dp"
        android:scrollbarSize="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_foreground" />

    <EditText
        android:id="@+id/textPersonName"
        android:layout_width="570dp"
        android:layout_height="105dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/Name"
        app:layout_constraintStart_toEndOf="@+id/imagePerson"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/textPhoneticName"
        android:layout_width="570dp"
        android:layout_height="105dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/PhoneticName"
        app:layout_constraintStart_toEndOf="@+id/imagePerson"
        app:layout_constraintTop_toBottomOf="@+id/textPersonName" />

    <EditText
        android:id="@+id/textNickname"
        android:layout_width="570dp"
        android:layout_height="105dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/Nickname"
        app:layout_constraintStart_toEndOf="@+id/imagePerson"
        app:layout_constraintTop_toBottomOf="@+id/textPhoneticName" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="336dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePerson"
        app:srcCompat="@drawable/ic_photo_foreground" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="222dp"
        android:layout_height="112dp"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textNickname"
        app:srcCompat="@mipmap/ic_launcher" />


    <Button
        android:id="@+id/button5"
        android:layout_width="164dp"
        android:layout_height="82dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="112dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textNickname" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/ic_phone_foreground" />

    <EditText
        android:id="@+id/textPhone"
        android:layout_width="570dp"
        android:layout_height="105dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:inputType="phone"
        android:text="@string/tlf"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="852dp"
        android:layout_marginLeft="852dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/ic_email_foreground" />

    <EditText
        android:id="@+id/textEmailAddress"
        android:layout_width="570dp"
        android:layout_height="105dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/email"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/textPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>